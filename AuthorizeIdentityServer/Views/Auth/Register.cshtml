@model AuthorizeIdentityServer.ViewModels.RegisterViewModel


<div class="login-page">

    <div class="card">
        <div class="card-header d-flex">
            <h3>Регистрация</h3>
        </div>

        <div class="card-body">
            <form asp-controller="Auth" asp-action="Register" method="post">

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group">
                    <label asp-for="UserName">Имя пользователя</label>
                    <input class="form-control" placeholder="Введите имя пользователя" asp-for="UserName" autofocus>
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Пароль</label>
                    <input type="password" class="form-control" placeholder="Введите пароль, не менее 6 символов" asp-for="Password" autocomplete="off">
                    <span asp-validation-for="Password" ></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Подтверждение пароля</label>
                    <input type="password" class="form-control" placeholder="Повторите пароль" asp-for="ConfirmPassword" autocomplete="off">
                    <span asp-validation-for="ConfirmPassword" ></span>
                </div>
                <div class="d-flex justify-content-between align-items-baseline">
                    <button class="btn btn-primary" name="button" >Войти</button>
                </div>
                 <span asp-validation-for="CustomError"></span>
            </form>
        </div>
    </div>

</div>

